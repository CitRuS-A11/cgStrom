<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueshWhite"
    >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/layoutInsideScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lessonTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/raleway_regular"
                android:padding="10dp"
                android:text="Add the biggest header and a paragraph with"
                android:textColor="@color/blueshBlack"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/lessonImageView"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:layout_below="@id/lessonTextView"
                android:layout_marginTop="20dp"
                android:src="@drawable/lesson0x2" />
        <LinearLayout
            android:id="@+id/answersLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lessonImageView">
            <LinearLayout
                android:id="@+id/answer1"
                android:tag="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/thin_stroke_border"
                android:backgroundTint="@color/colorWhite"
                android:backgroundTintMode="src_over"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="16dp">

                <TextView
                    android:tag="0"
                    android:id="@+id/answerTextView"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_medium"
                    android:paddingStart="6dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="The one on the left and the one on the right"
                    android:textColor="@color/blueshBlack"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/correctAnswerCheckMarkImageView"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_icons8_checkmark" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/answer2"
                android:tag="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/answer1"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/thin_stroke_border"
                android:backgroundTint="@color/colorWhite"
                android:backgroundTintMode="src_over"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="16dp">

                <TextView
                    android:tag="1"
                    android:id="@+id/answerTextView2"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_medium"
                    android:paddingStart="6dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="The one on the left"
                    android:textColor="@color/blueshBlack"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/correctAnswerCheckMarkImageView2"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_icons8_checkmark" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/answer3"
                android:tag="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/answer2"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/thin_stroke_border"
                android:backgroundTint="@color/colorWhite"
                android:backgroundTintMode="src_over"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="16dp">

                <TextView
                    android:tag="2"
                    android:id="@+id/answerTextView3"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_medium"
                    android:paddingStart="6dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="The one on the left and the one on the right"
                    android:textColor="@color/blueshBlack"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/correctAnswerCheckMarkImageView3"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_icons8_checkmark" />

            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomBarLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/border"
        android:backgroundTint="@color/colorWhite"
        android:backgroundTintMode="src_over"
        >

        <ImageView
            android:id="@+id/nextImageView"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/ic_play" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>