<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishedLessonActivity"
    android:background="@drawable/finished_lesson"
    android:id="@+id/relativeLayout">

    <TextView
        android:id="@+id/topTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="Congratulation"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="36sp"
        android:fontFamily="@font/raleway_bold"/>
    <TextView
        android:id="@+id/secondTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:paddingTop="8dp"
        android:layout_below="@+id/topTextView"
        android:text="@string/finished_first_lesson"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:alpha="0.8"
        android:fontFamily="@font/raleway_medium"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/continueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/secondTextView"
        android:text="Tap to continue"
        android:textSize="18sp"
        android:textColor="@color/colorRed"
        android:fontFamily="@font/raleway_bold"/>


</RelativeLayout>