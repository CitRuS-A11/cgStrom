<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/stepImageView"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/challlenge1x1"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/stepDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_below="@+id/stepImageView"
        android:text="First open Blender and delete the default cube by pressing x"
        android:textSize="18sp"
        android:textColor="@color/blueshBlack"
        android:fontFamily="@font/raleway_semi_bold"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/stepDescription"
        android:background="@color/blueshBlack"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>